{{template "base" .}}

{{define "content"}}
    <div class="container">
        <div class="row">
            <div class="col">
                <h1 class="mt-3">Make Reservation</h1>

                <form method="post" action="/make-reservation" class="needs-validation" novalidate>
                    <input type="hidden" name="csrf_token" value="{{.CSRFToken}}">

                    <div class="form-group mt-3">
                        <label for="first_name">First Name:</label>
                        {{with .Form.Errors.Get "first_name"}}
                            <label class="text-danger">{{.}}</label>
                        {{end}}
                        <input class="form-control" {{with .Form.Get "first_name"}} is-invalid{{end}}
                               id="first_name" autocomplete="off" type='text'
                               name='first_name' required>
                    </div>

                    <div class="form-group">
                        <label for="last_name">Last Name:</label>
                        {{with .Form.Errors.Get "last_name"}}
                            <label class="text-danger">{{.}}</label>
                        {{end}}
                        <input class="form-control" {{with .Form.Get "last_name"}} is-invalid{{end}}
                               id="last_name" autocomplete="off" type='text'
                               name='last_name' required>
                    </div>

                    <div class="form-group">
                        <label for="email">Email:</label>
                        {{with .Form.Errors.Get "email"}}
                            <label class="text-danger">{{.}}</label>
                        {{end}}
                        <input class="form-control" id="email"
                               {{with .Form.Get "email"}} is-invalid{{end}}
                               autocomplete="off" type='email'
                               name='email' required>
                    </div>

                    <div class="form-group">
                        <label for="phone">Phone:</label>
                        {{with .Form.Errors.Get "phone"}}
                            <label class="text-danger">{{.}}</label>
                        {{end}}
                        <input class="form-control" {{with .Form.Get "phone"}} is-invalid{{end}}
                               id="phone"
                               autocomplete="off" type='email'
                               name='phone' required>
                    </div>

                    <hr>
                    <input type="submit" class="btn btn-primary" value="Make Reservation">
                </form>


            </div>
        </div>

    </div>
{{end}}